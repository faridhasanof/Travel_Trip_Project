@using TravelTripProje.Models.Siniflar
@model List<Blog>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Bloq Listi</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>BASLIQ</th>
        <th>SIL</th>
        <th>GUNCELLE</th>
        <th>Detallar</th>
    </tr>
    @foreach (var x in Model)
    {
    <tr>
        <td>@x.ID</td>
        <td>@x.Baslik</td>
        <td><a href="/Admin/BlogSil/@x.ID" class="btn btn-danger">Sil</a></td>
        <td><a href="/Admin/BlogGetir/@x.ID" class="btn btn-warning">Guncelle</a></td>
        <td><a href="#" class="btn btn-default">Detallar</a></td>
    </tr>
    }
</table>
<a href="/Admin/YeniBlog" class="btn btn-primary">Yeni Bloqlar</a>