@using TravelTripProje.Models.Siniflar
@model List<Mekan>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}
<h2 style="margin:auto;width:20%;font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif">Mekanlar</h2>

@foreach (var x in Model)
{
<p style="font-size:25px;font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif"> @x.baslik</p>
    <br></br>
    <img style="height: 600px; width: 1350px; " src="@x.sekil" alt="" />
    <br></br>
    <p style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif">@x.yazi</p>
    <br /><br />
}